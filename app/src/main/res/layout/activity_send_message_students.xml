<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout_send_message_students"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shyro.universityupdates.SendMessageStudents">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSendStudent"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="20"
        android:id="@+id/text_to_sendStudent"
        android:hint="Enter the recent update to send to students here..."
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigationmenu"
        app:headerLayout="@layout/navigation_header"
        android:layout_gravity="start"
        android:id="@+id/nav_view_student"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
